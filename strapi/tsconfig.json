{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["./src/**/*.ts", "./config/**/*.ts", "./src/**/*.js", "./config/**/*.js"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".cache",
    ".tmp",
    "admin",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

